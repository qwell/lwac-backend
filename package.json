{
  "name": "lwac-backend",
  "version": "1.0.0",
  "description": "Backend code for LWA Challenge",
  "main": "app.js",
  "scripts": {
    "copy": "copyfiles -u2 \"src/assets/**/*\" dist/",
    "build": "npm run copy && tsc",
    "start": "npm run build && node dist/app.js",
    "dev": "npm run copy && tsc-watch --onSuccess \"nodemon -V dist/app.js\"",
    "tslint": "tslint -p .",
    "lint": "npm run tslint",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Jason Parker <north@ntbox.com",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1",
    "superagent": "^6.1.0",
    "superagent-prefix": "^0.0.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/superagent": "^4.1.13",
    "@types/superagent-prefix": "^0.0.3",
    "concurrently": "^6.3.0",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.13",
    "tsc-watch": "^4.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.4.4"
  }
}
